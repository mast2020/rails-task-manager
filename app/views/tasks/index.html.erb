<h1>My Tasks</h1>

<ul style="list-style-type:none; padding-left:0px">
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed == true %>
        <input type="checkbox" checked> <%= link_to task.title, task_path(task)  %> || <%= link_to "Delete task", destroy_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
      <% else %>
        <input type="checkbox"> <%= link_to task.title, task_path(task) %> || <%= link_to "Delete task", destroy_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>
<br>
<%= link_to "Add a new task", tasks_new_path %>
